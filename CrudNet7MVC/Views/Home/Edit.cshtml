@model CrudNet7MVC.Models.Contact

@{
    ViewData["Title"] = "Edit Contact";
}



<h1 class="text-center"> Contacts con .Net 7 (.NET Core MVC)</h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Edit User</strong></h3>
            </div>
            <div class="card-body">

                <form asp-action="Edit" method="POST">

                    <!--ID del usuario-->
                    <input type="hidden" asp-for="Id"/>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Contact Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi-pencil-fill"></i> Save</button>
                    </div>

                </form>
                <a asp-controller="Home" asp-action="Index">Volver</a>

            </div>
        </div>

    </div>
</div>


