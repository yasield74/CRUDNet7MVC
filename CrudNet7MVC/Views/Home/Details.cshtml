@model CrudNet7MVC.Models.Contact

@{
    ViewData["Title"] = "Contact Details";
}



<h1 class="text-center"> Contacts con .Net 7 (.NET Core MVC)</h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Edit User</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Name:</strong> @Html.DisplayFor(m=>m.Name)</li>
                    <li class="list-group-item"><strong>Phone:</strong> @Html.DisplayFor(m=>m.PhoneNumber)</li>
                    <li class="list-group-item"><strong>Email:</strong> @Html.DisplayFor(m=>m.Email)</li>
                </ul>
               
                <a asp-controller="Home" asp-action="Index">Volver</a>

            </div>
        </div>

    </div>
</div>


